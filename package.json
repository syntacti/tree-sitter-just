{
  "name": "tree-sitter-just",
  "version": "0.1.0",
  "description": "Treesitter grammar for Justfiles (casey/just)",
  "main": "grammar.js",
  "scripts": {
    "test": "tree-sitter test",
    "gen": "tree-sitter generate"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/syntacti/tree-sitter-just"
  },
  "keywords": [
    "tree-sitter",
    "justfiles",
    "parser",
    "lexer"
  ],
  "author": "Suraj Ghimire",
  "license": "MIT",
  "dependencies": {
    "nan": "^2.16.0",
    "tree-sitter": "^0.20.0"
  },
  "devDependencies": {
    "tree-sitter-cli": "^0.20.6"
  },
  "tree-sitter": [
    {
      "file-types": [
        "just"
      ],
      "highlights": [
        "queries/highlights.scm"
      ],
      "injection-regex": "^(just)$",
      "locals": [
        "queries/locals.scm"
      ],
      "scope": "source.just"
    }
  ]
}
